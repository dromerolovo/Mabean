<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
             xmlns:vm="using:Mabean.ViewModels"
             xmlns:models="clr-namespace:Mabean.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Mabean.Views.ProcessFinderView"
             x:DataType="vm:ProcessFinderViewModel"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch">

    <Border Padding="20">
        <Grid RowDefinitions="Auto Auto Auto * Auto">

            <TextBlock Grid.Row="0"
                       Classes="h4"
                       Text="Process Finder" />

            <Border Grid.Row="1" Height="12" />

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,16">
                <Button Classes="Outline"
                        Command="{Binding LoadProcessesCommand}"
                        IsEnabled="{Binding !IsLoading}"
                        Content="Refresh" />
            </StackPanel>

            <DataGrid Grid.Row="3"
                      ItemsSource="{Binding Processes}"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      RowHeight="44"
                      HeadersVisibility="Column"
                      VerticalScrollBarVisibility="Visible"
                      HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>

                    <DataGridTemplateColumn Width="80" Header="PID">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <SelectableTextBlock Text="{Binding ProcessId}"
                                                     VerticalAlignment="Center"
                                                     Margin="12,0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="600" Header="Name">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <SelectableTextBlock Text="{Binding ProcessName}"
                                                     VerticalAlignment="Center"
                                                     Margin="12,0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="400" Header="User">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <SelectableTextBlock Text="{Binding UserName}"
                                                     VerticalAlignment="Center"
                                                     Margin="12,0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Grid.Row="4"
                       Margin="0,16,0,0"
                       Classes="Small Muted">
                <Run Text="{Binding Processes.Count}" />
                <Run Text=" process(es) found." />
            </TextBlock>

        </Grid>
    </Border>

</UserControl>
